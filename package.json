{
  "name": "fe-shoppy",
  "version": "1.0.0",
  "author": "quoctrungdh <quoctrungdh@gmail.com",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "npm-run-all --parallel dev:watch-client dev:watch-server",
    "dev:watch-client": "npm run clean && cross-env NODE_ENV=development parcel watch src/client/index.js --out-dir dist/bundles",
    "dev:watch-server": "cross-env NODE_ENV=development npx nodemon --exec babel-node --ext js,jsx --delay 0.5 --watch src --watch test src/server/",
    "prod": "npm run prod:build && npm run prod:start-server",
    "prod:build": "npm run clean && npm run prod:copy-files && npm run prod:build-server && npm run prod:build-client ",
    "prod:build-client": "cross-env NODE_ENV=production parcel build src/client/index.js --public-url / --out-dir dist/bundles --detailed-report",
    "prod:build-server": "cd src/ && cross-env npx babel '**/*.{js,jsx}' --no-babelrc --presets react,node8 --plugins transform-class-properties,syntax-dynamic-import --out-dir '../dist'",
    "prod:start-server": "cross-env NODE_ENV=production node dist/server/",
    "clean": "rimraf dist",
    "prod:copy-files": "cross-env npx copyfiles -u 1 'src/public/**/*' dist"
  },
  "browser": {
    "./src/client/routes/codeSplitSync.js": "./src/client/routes/codeSplitAsync.js",
    "config": "./src/client/utils/clientConfig.js"
  },
  "postcss": {
    "modules": true,
    "plugins": {
      "autoprefixer": {
        "grid": true
      }
    }
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ],
  "dependencies": {
    "config": "^1.30.0",
    "express": "^4.16.2",
    "formik": "^0.11.11",
    "moment": "^2.21.0",
    "mongoose": "^5.0.8",
    "mongoose-url-slugs": "^1.0.2",
    "styled-components": "^3.1.6"
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.3",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-node8": "^1.2.0",
    "babel-preset-react": "^6.24.1",
    "colors": "^1.1.2",
    "copyfiles": "^1.2.0",
    "cross-env": "^5.1.3",
    "eslint": "^4.18.2",
    "eslint-plugin-react": "^7.7.0",
    "node-notifier": "^5.2.1",
    "node-sass": "^4.7.2",
    "nodemon": "^1.17.1",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.6.2",
    "postcss-modules": "^1.1.0",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-async-component": "^1.0.2",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.1.0"
  }
}
